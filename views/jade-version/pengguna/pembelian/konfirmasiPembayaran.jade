extends layoutTabPembelian
append contentDalam
    if(!daftarTransaksi)
      .alert.alert-danger
       center
           h4: b Tidak ada konfirmasi
    else
        each val in daftarTransaksi
            .row(style='border : 1px solid black;margin : 10px 0')
                p <b> Tanggal Transaksi : </b> <i> #{moment(val.tanggal).format('YYYY-MM-DD')} </i> <b> Jatuh Tempo Konfirmasi : </b> <i>#{moment(val.jatuh_tempo).format('YYYY-MM-DD')} </i>
                p <b> Total Tagihan </b> <br/><b style='font-size : 14pt'> Rp #{val.total_tagihan} </b>
                p.span.pull-right: a(href='#') Detail Transaksi
            .row#detailTransaksi
                - each inv in val.Invoices
                    .row(style='margin : 0px 30px')
                        table(border='1', width='720px')
                            tr
                                td(height='35px', colspan='2')
                                    span(style='font-size : 11pt')
                                        | Pembelian dari toko :
                                        a(href='/toko/#{inv.Toko.id}')  #{inv.Toko.nama}
                                            tr
                                td(height='70px')
                                    span.pull-left(style='padding : 0 10px 0 10px')
                                        img(src='/images/produk/default.jpg' width='30px')
                                    span.pull-left
                                        b  #{inv.Produk.nama}
                                        br
                                        b(style='font-size : 8pt')  2 Barang (0.5 kg) x Rp #{inv.Produk.harga}
                                        br
                                        a(href='#', style='font-size : 8pt') Ubah
                                td
                                    b  Harga Barang <br>
                                    | #{inv.Produk.harga}
                                    tr
                                td
                                    b  Alamat Tujuan
                                    a(href='#', style='font-size : 11px')  Ubah <br/>
                                    b  Riansyah <br/>
                                    | Jln Anawai No 40 <br/>
                                    | Kendari Kota Kendari, 8373733 <br/>
                                    | Sulawesi Tenggara <br/>
                                    | Telp: 085756603194
                                td(colspan='2')
                                    b  Keterangan
                                    br
                                    |                     -
                                    span.pull-right
                                        a(href='#') hapus
                            tr
                                td(colspan='3')
                                    span.pull-right(style='padding : 10px 0px;font-size:12pt')
                                        | Total Pembayaran <b> Rp 240.000 </b>


